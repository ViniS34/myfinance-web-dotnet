@model myfinance_web_dotnet.Models.PlanoContaModel

@{
    ViewData["Title"] = "Criar plano de contas";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form asp-action="Cadastrar" asp-controller="PlanoConta" method="post">
        <input type="hidden" asp-for="Id"/><br>

        <label>Descrição: </label>
        <input type="text" asp-for="Descricao"/><br>
        
        <br><br>

        <label>Tipo: </label>
        <label>@Html.RadioButtonFor(m => m.Tipo, "D")Despesa</label>
        <label>@Html.RadioButtonFor(m => m.Tipo, "R")Receita</label>

        <br><br>

        <button type="submit" class="btn btn-block btn-success">Registrar</button>
    </form>
</div>